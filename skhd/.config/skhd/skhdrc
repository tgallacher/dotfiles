##
## Change window focus
##

# focus within space
ctrl + shift - j : yabai -m window --focus south
ctrl + shift - k : yabai -m window --focus north
ctrl + shift - h : yabai -m window --focus west
ctrl + shift - l : yabai -m window --focus east

# change focus between external displays (left, right)
ctrl + shift - s : yabai -m display --focus west
ctrl + shift - g : yabai -m display --focus east

##
## Modifying layout
##

# rotate layout clockwise
alt - r : yabai -m space --rotate 270
# flip along y-axis
alt - y : yabai -m space --mirror y-axis
# flip along x-axis
alt - x : yabai -m space --mirror x-axis
# toggle window float
alt - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

##
## Window 
##
ctrl + shift - m : yabai -m window --toggle zoom-fullscreen
ctrl + shift - e : yabai -m space --balance

# swap windows
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - h : yabai -m window --swap west
shift + alt - l : yabai -m window --swap east

# move window and split
ctrl + alt - j : yabai -m window --warp south
ctrl + alt - k : yabai -m window --warp north
ctrl + alt - h : yabai -m window --warp west
ctrl + alt - l : yabai -m window --warp east

# move window to display left and right
shift + alt - s : yabai -m window --display west; yabai -m display --focus west;
shift + alt - g : yabai -m window --display east; yabai -m display --focus east;

# move window to prev and next space
shift + alt - p : yabai -m window --space prev;
shift + alt - n : yabai -m window --space next;

# move window to space #
ctrl + shift - 1 : yabai -m window --space 1;
ctrl + shift - 2 : yabai -m window --space 2;
ctrl + shift - 3 : yabai -m window --space 3;
ctrl + shift - 4 : yabai -m window --space 4;
ctrl + shift - 5 : yabai -m window --space 5;
ctrl + shift - 6 : yabai -m window --space 6;
ctrl + shift - 7 : yabai -m window --space 7;
ctrl + shift - 8 : yabai -m window --space 8;
ctrl + shift - 9 : yabai -m window --space 9;

##
## Services
##

# stop/start/restart yabai,skhd
ctrl + alt - q : yabai --stop-service
ctrl + alt - s : yabai --start-service
ctrl + alt - r : yabai --restart-service

ctrl + shift + alt - q : skhd --stop-service
ctrl + shift + alt - s : skhd --start-service
ctrl + shift + alt - r : skhd --restart-service

